{{!-- {{>navbar user=user}} --}}
<div class="toggled" id="wrapper">
  <!-- Sidebar -->
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand">
          <a href="#">
            {{title}}
          </a>
          <p id="current-user">
            {{user}}
          </p>
      </li>
      {{#each roomsList as |room|}}
        <li>
          <div class="{{room.name}}">
            <a class="room" href="#">{{room.name}}</a>
          </div>
        </li>
      {{/each}}

    </ul>
  </div>
  <!-- /#sidebar-wrapper -->


  <!-- Page Content -->
  <div id="page-content-wrapper">
      <div class="container-fluid">
          <div class="row">
              <div class="col-lg-12">
                <div id='roommessages' class='hidden'></div>
              </div>
          </div>
      </div>
  </div>
  <!-- /#page-content-wrapper -->
</div>
    <!-- /#wrapper




{{!-- styles above  --}}

<div class="jumbotron">
  <div class="container">
    <h1>SUPER CHAT</h1>
  </div>
</div>

<div class="container">
  <!-- Example row of columns -->
  <div class="row">
    <div class="col-md-4">
      <h2>Chat rooms</h2>

      <ul class="list-group rooms-list">
      <li class="list-group-item">
        <form id="create-room">
          <div class="form-group">
            <input type="text" name="roomName" placeholder="Room name" class="form-control">
          </div>
          <div class="text-center"><button type="submit" id="create-room-submit" class="btn btn-success">Sign in</button></div>
        </form>
      </li>

      </ul>
    </div>


    <div class="col-md-4">
      <div id='roommessages' class='hidden'></div>
    </div>
    <div class="col-md-4">
      <div class="hidden" id="message-form">
        <form>
          <div class="form-group">
            <label for="new-message">NEW POST</label>
            <textarea type="text" class="form-control" id="new-message" placeholder="Type your message"></textarea>
          </div>
          <button type="submit" id="submit-message" class="btn btn-default">Send</button>
        </form>
      </div>
    </div>
  </div>
</div>

